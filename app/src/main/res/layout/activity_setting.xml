<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置手机的心情"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/setting_tv"
        android:id="@+id/sleepy_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_sleep_btn"/>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sleepy_iv"
        android:id="@+id/angary_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_angry_btn"/>

</RelativeLayout>